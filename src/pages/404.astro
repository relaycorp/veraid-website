---
import Layout from "../layouts/Skeleton.astro";
import { Image } from "astro:assets";
import FourOFour from "../assets/images/404.svg";
---

<Layout title="404 error" description="Page not found">
  <div
    class="flex flex-col items-center justify-center text-center py-12 lg:py-16 px-4 lg:px-6 space-y-8"
  >
    <Image src={FourOFour} alt="404 error" class="object-cover w-1/2 sm:w-1/3 lg:w-1/3" />
    <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white">
      Oops! Something went wrong
    </h1>
    <p class="text-md sm:text-lg md:text-xl lg:text-2xl">
      We couldn't find the page you're looking for.
    </p>
    <a
      href="/"
      class="bg-green-400 hover:bg-green-300 rounded-full text-black px-4 py-2 text-sm sm:text-base md:text-lg lg:text-xl"
      >Return to the homepage</a
    >
  </div>
</Layout>
