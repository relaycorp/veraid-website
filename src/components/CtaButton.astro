---
interface Props {
  href: string;
  text: string;
  variant?: "primaryVeraid" | "secondaryVeraid" | "primaryKliento";
}

const { href, text, variant = "primaryVeraid" } = Astro.props;

const styles = {
  primaryVeraid: "bg-green-400 hover:bg-green-300 text-black",
  secondaryVeraid: "bg-transparent hover:bg-green-400/10 text-green-400 border border-green-400",
  primaryKliento: "bg-indigo-400 hover:bg-indigo-300 text-black",
};
---

<a
  href={href}
  class={`${styles[variant]} w-full md:w-auto px-6 py-2 rounded-full text-sm md:text-base inline-block text-center`}
>
  {text}
</a>
