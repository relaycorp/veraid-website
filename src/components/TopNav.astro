---
import { Image } from "astro:assets";
import logoDark from "../assets/veraid-logo-dark.png";

const navLinks = [
  { href: "/ux", text: "User experience" },
  { href: "/architecture", text: "Architecture" },
  { href: "/spec", text: "Spec" },
  { href: "/prior-art", text: "Prior art" },
];
---

<nav class="flex items-center justify-between px-6 py-8 mx-auto max-w-7xl">
  <div class="flex items-center">
    <a href="/">
      <Image src={logoDark} alt="Logo" width={100} height={100} />
    </a>
  </div>

  <!-- Hamburger menu toggle -->
  <input type="checkbox" id="nav-toggle" class="hidden peer" />
  <label for="nav-toggle" class="cursor-pointer md:hidden z-20">
    <svg class="w-6 h-6 peer-checked:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
    <svg
      class="hidden w-6 h-6 peer-checked:block"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"
      ></path>
    </svg>
  </label>

  <!-- Desktop menu -->
  <div class="hidden md:flex items-center gap-10">
    {
      navLinks.map(({ href, text }) => (
        <a {href} class="transition-colors hover:text-green-200">
          {text}
        </a>
      ))
    }
  </div>

  <!-- Mobile menu -->
  <div
    class="fixed inset-y-0 right-0 w-64 bg-neutral-900 translate-x-full peer-checked:translate-x-0 transition-transform md:hidden"
  >
    <div class="flex flex-col items-start justify-center h-full gap-8 text-white px-8">
      {
        navLinks.map(({ href, text }) => (
          <a {href} class="transition-colors hover:text-green-200">
            {text}
          </a>
        ))
      }
    </div>
  </div>
</nav>
