---
import TabbedCodeSnippet from "../CodeTabsReact.tsx";
import TwoColumnSection from "../TwoColumn.astro";
import CtaButton from "../CtaButton.astro";

const HEADING_CLASS = "text-4xl text-white font-bold mb-4";
const PARAGRAPH_CLASS = "text-lg mb-8";
---

<TwoColumnSection padding="pb-0">
  <div slot="left">
    <TabbedCodeSnippet
      client:load
      tabs={[
        {
          label: "Languages",
          codeBlocks: [
            {
              language: "JS",
              code: `const client = new Client({
  endpoint: "https://api.example.com",
  credentials: process.env.API_KEY
});

const response = await client.getData({
  id: "user-123",
  include: ["profile", "settings"]
});`,
            },

            {
              language: "Kotlin",
              code: `val client = Client.Builder()
    .setEndpoint("https://api.example.com")
    .setCredentials(System.getenv("API_KEY"))
    .build()

val response = client.getData(
    GetDataRequest.Builder()
        .setId("user-123")
        .setInclude(listOf("profile", "settings"))
        .build()
)`,
            },

            {
              language: "Python",
              code: `client = Client(
    endpoint="https://api.example.com",
    credentials=os.environ.get("API_KEY")
)

response = client.get_data(
    id="user-123",
    include=["profile", "settings"]
  )`,
            },
          ],
        },
      ]}
      showProviderTabs={false}
    />
    <slot />
  </div>

  <div slot="right">
    <h2 class={HEADING_CLASS}>Get a Kliento credential</h2>
    <p class={PARAGRAPH_CLASS}>
      Kliento enables secure connections to external servers from AWS environments without the need
      for traditional API keys.
    </p>
    <CtaButton href="/" text="Get Started" variant="primaryKliento" />
  </div>
</TwoColumnSection>

<TwoColumnSection padding="pb-16">
  <div slot="left">
    <h2 class={HEADING_CLASS}>Verify credentials</h2>
    <p class={PARAGRAPH_CLASS}>
      Kliento enables secure connections to external servers from AWS environments these without the
      need for traditional API keys.
    </p>
    <CtaButton href="/" text="Get Started" variant="primaryKliento" />
  </div>
  <div slot="right">
    <TabbedCodeSnippet
      client:load
      tabs={[
        {
          label: "GitHub",
          codeBlocks: [
            {
              language: "JS",
              code: `const client = new Client({
  endpoint: "https://api.example.com",
  credentials: process.env.API_KEY
});

const response = await client.getData({
  id: "user-123",
  include: ["profile", "settings"]
});`,
            },
            {
              language: "Kotlin",
              code: `val client = Client.Builder()
    .setEndpoint("https://api.example.com")
    .setCredentials(System.getenv("API_KEY"))
    .build()

val response = client.getData(
    GetDataRequest.Builder()
        .setId("user-123")
        .setInclude(listOf("profile", "settings"))
        .build()
)`,
            },
            {
              language: "Python",
              code: `client = Client(
    endpoint="https://api.example.com",
    credentials=os.environ.get("API_KEY")
)

response = client.get_data(
    id="user-123",
    include=["profile", "settings"]
  )`,
            },
          ],
        },
        {
          label: "GCP",
          codeBlocks: [{ language: "JS", code: "const kliento = require('kliento');" }],
        },
        {
          label: "Azure",
          codeBlocks: [{ language: "JS", code: "const kliento = require('kliento');" }],
        },
      ]}
      showProviderTabs={true}
    />
  </div></TwoColumnSection
>
