---
interface Props {
  bgColor?: string;
  padding?: string;
  reverseOnMobile?: boolean;
}

const { bgColor = "bg-neutral-900", padding = "pb-8", reverseOnMobile = false } = Astro.props;
---

<section class={`${padding} ${bgColor} px-4 pt-8 sm:px-6 sm:pt-16`}>
  <div class="mx-auto max-w-5xl">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-16 items-center">
      <div class={reverseOnMobile ? "order-2 lg:order-1" : ""}>
        <slot name="left" />
      </div>

      <div class={`text-left ${reverseOnMobile ? "order-1 lg:order-2" : ""}`}>
        <slot name="right" />
      </div>
    </div>
  </div>
</section>
